{
  "name": "vue-electron-vite-tailwind",
  "version": "1.0.0",
  "description": "An Electron application with Vue",
  "main": "./out/main/index.js",
  "author": "jerome",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "start": "electron-vite preview",
