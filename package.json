    "electron-vite": "^1.0.27",

    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "prettier": "^3.0.2",

    "vite": "^4.4.9",
    "vue": "^3.3.4"
  }
